def get_room_by_id(rooms, room_id):
    for room in rooms:
        if room["id"] == room_id:
            return room
    return None
room_id = input("Nh·∫≠p ID ph√≤ng c·∫ßn t√¨m: ")

room = get_room_by_id(rooms, room_id)

if room:
    print("\nüìå TH√îNG TIN PH√íNG")
    print(f"ID ph√≤ng: {room['id']}")
    print(f"T√™n ph√≤ng: {room['name']}")
    print(f"Lo·∫°i ph√≤ng: {room['type']}")
    print(f"Gi√° ph√≤ng: {room['price']:,} VND")
    print(f"Tr·∫°ng th√°i: {room['status']}")
else:
    print("‚ùå Kh√¥ng t√¨m th·∫•y ph√≤ng v·ªõi ID n√†y!")
